{
  "name": "altsia-vscode",
  "displayName": "Altsia Preview",
  "description": "Preview .alt files in a side webview",
  "version": "0.0.1",
  "publisher": "altsia",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "altsia",
        "aliases": [
          "Altsia",
          "altsia"
        ],
        "extensions": [
          ".alt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "altsia",
        "scopeName": "source.altsia",
        "path": "./syntaxes/altsia.tmLanguage.json"
      },
      {
        "scopeName": "altsia:semicolon.injection",
        "path": "./syntaxes/altsia-semicolon.injection.tmLanguage.json",
        "injectTo": [
          "source.altsia"
        ]
      }
    ],
    "commands": [
      {
        "command": "altsiaPreview.openPreviewToSide",
        "title": "Open Preview to the Side",
        "icon": "$(open-preview)"
      },
      {
        "command": "altsia.commentLine",
        "title": "Altsia: Comment Line"
      },
      {
        "command": "altsia.displayLanguage.set",
        "title": "Altsia: Set Display Language"
      }
    ],
    "keybindings": [
      {
        "command": "altsia.commentLine",
        "key": "ctrl+/",
        "mac": "cmd+/",
        "when": "editorTextFocus && editorLangId == altsia && !editorReadonly"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "altsiaPreview.openPreviewToSide",
          "when": "resourceExtname == .alt",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "copy:katex": "node scripts/copy-katex-assets.mjs",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "katex": "^0.16.28", 
    "altsia": "0.1"
  }
}
